<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:padding="2dp"
        android:textColor="@color/guide_color"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/img_friend_avatar"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:padding="5dp"
        android:src="@drawable/default_head" />

    <LinearLayout
        android:layout_height="56.0dip"
        android:layout_width="fill_parent"
        android:layout_below="@id/alpha"
        android:layout_toRightOf="@id/img_friend_avatar"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_friend_name"
            style="@style/Smile.TextView._Black"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="112211"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_friend_phone"
            style="@style/Smile.TextView._Black"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:singleLine="true"
            android:text="1122221"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>